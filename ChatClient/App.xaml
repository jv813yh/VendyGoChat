<Application x:Class="ChatClient.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             xmlns:local="clr-namespace:ChatClient">
    
    <Application.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                
                <!--
                    Styles that define the look of the app.
                    These will override the default styles provided by the framework modernwpf.
                -->
                <ui:ThemeResources />
                <ui:XamlControlsResources />
                
                <!--
                    Own style for buttons with setters ... 
                    border with cornerRadius and trigger for IsMouseOver
                -->
                <ResourceDictionary Source="Themes/ModernButtonTheme.xaml"/>
                
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </Application.Resources>
</Application>
